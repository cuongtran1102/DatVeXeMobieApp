<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="2dp"
    android:padding="8dp"
    app:cardBackgroundColor="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvTenTuyenDuong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên Tuyến Đường"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvLoaiXe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại xe"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tvGioXuatPhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giờ xuất phát: 08:00 AM"
            android:textSize="14sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tvGiaNiemYet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:text="200.000 VNĐ"
        android:textSize="16sp"
        android:textStyle="bold" />
</androidx.cardview.widget.CardView>
